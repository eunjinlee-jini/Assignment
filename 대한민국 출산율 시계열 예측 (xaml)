<Window x:Class="BirthRatePrediction.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" 
        Title="Birth Rate Prediction" Height="600" Width="800">
    <!-- 메인 윈도우 정의, 제목과 크기를 설정 -->
    <Grid>
        <!-- 예측 버튼 -->
        <!-- StackPanel은 버튼을 좌측 상단에 정렬하고, 너비와 높이를 지정 -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Height="30">
            <!-- 사용자가 출산율 예측을 실행하는 버튼 -->
            <Button Name="btnPredict" Content="출산율 예측하기" Click="btnPredict_Click" Margin="10"/>
            <!-- Content는 버튼에 표시되는 텍스트, Click은 클릭 시 실행되는 이벤트 핸들러를 지정 -->
        </StackPanel>

        <!-- 출산율 차트를 표시할 부분 -->
        <!-- LiveCharts의 CartesianChart 사용, Name 속성을 사용해 코드 뒤에서 이 차트를 제어할 수 있음 -->
        <lvc:CartesianChart Name="birthRateChart" Margin="10,40,10,277" Series="{Binding BirthRateValues}">
            <!-- X축 설정 -->
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Year" Labels="{Binding Labels}"/>
                <!-- X축에 "Year" 제목 추가, Binding을 사용해 외부 데이터를 차트에 연결 -->
            </lvc:CartesianChart.AxisX>

            <!-- Y축 설정 -->
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Birth Rate"/>
                <!-- Y축에 "Birth Rate" 제목 추가 -->
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>

        <!-- 데이터 그리드를 표시할 부분 -->
        <!-- 예측된 출산율 데이터를 DataGrid로 표시, 자동으로 열을 생성 (AutoGenerateColumns="True") -->
        <DataGrid Name="dataGrid" AutoGenerateColumns="True" Margin="10,312,10,10"/>
    </Grid>
</Window>
    
    
    
    
    
